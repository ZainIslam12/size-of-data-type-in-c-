#include <iostream>
using namespace std;

int main()
{
	//This is how to calculate the size of the data type in the c++

	cout << "The size of the  integer data type is " << sizeof(int) << " bytes " << endl;
	cout << "The size of the  double  data type is " << sizeof(double) << " bytes " << endl;
	cout << "The size of the  float   data type is " << sizeof(float) << " bytes " << endl;
	cout << "The size of the character data type is "<< sizeof(char) << " bytes " << endl;

	return 0;
}
